/*倍速选择,逐帧播放按钮*/
QPushButton#btn_playspeed {
    border: none;
    background-color: transparent;
    font-size: 16px;
    margin-bottom: 1px;
    font-family: Microsoft YaHei;
    color: rgb(255,255,255);
}
QPushButton:hover#btn_playspeed {
    color: rgb(255,92,56);
}

QPushButton#btn_config {
    border: none;
    border-image: url(:/Image/config_normal.png);
}
QPushButton:hover#btn_config {
    border-image: url(:/Image/config_hover.png);
}

QPushButton#btn_pauseon {
