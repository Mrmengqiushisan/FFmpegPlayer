/*播放列表*/
QListWidget#listwidget_playlist {
    border:none;
    border-top: 1px solid rgb(81,81,85) ;
    background:transparent;
    outline:0px;
}
QListWidget::Item#listwidget_playlist {
    height: 80px;
    margin-top: 10px;
}

QListWidget::Item:hover#listwidget_playlist {
    background:rgb(47,47,55);
}
QListWidget::Item:selected#listwidget_playlist {
    background-color:rgb(47,47,55);
}

QListWidget QScrollBar:vertical {
    padding-right:5px;
    width:11px;
    background:transparent;
    border:none;
}
QListWidget QScrollBar::handle:vertical {
    background:rgb(81,81,85);border-radius:3px;
}
QListWidget QScrollBar::handle:vertical:hover {
    background:rgb(255,92,56);
}
QListWidget QScrollBar::add-line:vertical {
    background:none;
}
QListWidget QScrollBar::sub-line:vertical {
    background:none;
}
QListWidget QScrollBar::add-page:vertical,QScrollBar::sub-page:vertical {
    background:transparent;
}

QDialog#dialog_config QLabel{
    font-size: 15px;
    font-family: Microsoft YaHei;
    color:rgb(255,255,255);
}

QDialog#dialog_config QPushButton {
    font-size: 15px;
    border-radius: 5px;
    border: none;
    font-family: Microsoft YaHei;
    color:rgb(255,255,255);
    background-color: rgb(60,60,60);
}
QDialog#dialog_config QPushButton:hover {
    background-color:rgb(120,120,120);
}
QDialog#dialog_config QPushButton:checked {
    color:rgb(255,92,56);
    background-color:rgb(120,120,120);
}
