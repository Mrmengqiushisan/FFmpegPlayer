QWidget#widget_side {
    border:none;
    background-color: rgb(38,38,43);
}

QLabel#label_playing,QLabel#label_playing_fullscreen,QLabel#label_current_time {
    color:rgb(255,255,255);
    background-color: transparent;
    font-family: Microsoft YaHei;
    font-size: 20px;
}

QLabel#label_logo {
    color:rgb(255,255,255);
    border:none;
    font-weight: bold;
    font-style: italic;
    font-size: 20px;
    font-family: Microsoft YaHei;
}
QLabel#label_logo{
    border-image: url(:/Image/video_image.png);
}
QLabel#label_pts,QLabel#label_duration,QLabel#label_seperator,QLabel#label_volume {
    color:rgb(255,255,255);
    background-color: transparent;
    font-family: Microsoft YaHei;
    font-size: 16px;
}

QLabel#label_playlist {
    color:rgb(255,92,56);
    background-color: transparent;
    font-family: Microsoft YaHei;
    font-size: 18px;
}

/*播放进度条*/
QSlider::groove:horizontal#slider_AVPts {
    border:0px;
}
QSlider::sub-page:horizontal#slider_AVPts {
    background:rgb(255,92,56);
    margin-top:11px;
    margin-bottom:3px;
}
QSlider::add-page:horizontal#slider_AVPts {
    background:rgb(83,83,83);
    margin-top:11px;
    margin-bottom:3px;
}
/*正常拖动把手样式*/
QSlider::handle:horizontal#slider_AVPts {
    border-radius:0px;
    border:none;
    width:0px;
}

